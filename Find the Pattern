#include <stdio.h>
void main()
{
    long long int n, sum, min, max, i;
    scanf("%lld", &n);
    long long int a[n];
    for(i=0; i<n; i++)
    {
        scanf("%lld", &a[i]);
    }
    min = a[0];
    for(i=1; i<n; i++)
    {
        if(a[i]<min)
        {
            min = a[i];
        }
    }
    max = a[0];
    for(i=1; i<n; i++)
    {
        if(a[i]>max)
        {
            max = a[i];
        }
    }
    sum = min + max;
    printf("%lld", sum);
}
